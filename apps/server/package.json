{
  "name": "@oers/server",
  "description": "Online Egyptian Ratscrew Game Server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev:serve": "nodemon --watch dist --watch public dist/index.js",
    "dev:build": "esbuild --bundle --watch --sourcemap --platform=node --target=node22 --packages=external --format=esm --outdir=dist src/index.ts",
    "dev:sync-client": "nodemon --watch ../client/dist --exec 'pnpm run copy-client' --ext js,css,html",
    "dev": "concurrently --kill-others \"pnpm run dev:build\" \"pnpm run dev:serve\" \"pnpm run dev:sync-client\"",
    "build": "pnpm run clean && esbuild --bundle --sourcemap --platform=node --target=node22 --packages=external --format=esm --outdir=dist src/index.ts && pnpm run copy-client",
    "copy-client": "mkdir -p public && cp -r ../client/dist/* public/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist public",
    "clean:full": "pnpm run clean && rm -rf node_modules"
  },
  "dependencies": {
    "@oer/configuration": "workspace:*",
    "@oer/message": "workspace:*",
    "@trpc/server": "^11.0.0-rc.700",
    "express": "^4.18.2",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "socket.io": "^4.7.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.7",
    "concurrently": "^9.0.1",
    "esbuild": "^0.19.0",
    "nodemon": "^3.1.7",
    "typescript": "^5.0.0"
  }
}
